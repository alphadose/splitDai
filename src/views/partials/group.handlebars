<form id="addgroup">
<div class="ui form">
    <div class="fields">
        <div class="six wide field">
            <label>Group Name</label>
            <input type="text" placeholder="" id="groupname">
        </div>
        <div class="three wide field">
        </div>
        <div class="three wide field">

<div class="ui left labeled button" tabindex="0" onlick="addfriend()">
  <a class="ui basic label">
    Add friend
  </a>
  <div class="ui icon button">
    <i class="plus icon"></i>
  </div>
</div>

        </div>
    </div>
    <div class="friends-address">

    <div class="fields">
        <div class="twelve wide field">
            <input type="text" placeholder=" Friend 1">
        </div>
        <div class="four wide field">
            <button class="ui icon button">
                <i class="minus circle icon"></i>
            </button>
        </div>
    </div>
    </div>
    <div class="fields">
        <div class="eight wide field">
            <label>DAI Token Address</label>
            <input type="text" placeholder="8 Wide" id="dai-api">
        </div>
    <div class="fields">
        <div class="four wide field">
            <input type="submit" class="ui button" placeholder="8 Wide">
        </div>
    </div>

</div>
</form>
<script>
    function addfriend(){
        let len = $('.friends-address').length + 1;
    $('.friends-address').append('<div class="fields"><div class="twelve wide field"><input type="text" placeholder="Friend ' + len + '''"></div><div class="four wide field"><button class="ui icon button deleteentry"><i class="minus circle icon"></i></button></div></div>');
    }
    $('.deleteentry').click({
        $(this).parent().parent().remove();
    })
    $('.addgroup').submit(function(e){
        e.preventDefault();
        let friend = {};
        $.each($$('.friends-address>fields>field>input'), function(i,v){
            friend['f'+(i+1)] = v.attr('value');
        })

        $.post('/group/add', {
            friends: friend,
            api: $('#dai-api').attr('value'),
            name: $('#groupname').attr('value')
        })
    })
</script>
